<resources>
    <!--新闻频道-->
    <style name="netease_news_summary_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="netease_news_channel_sort_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/netease_item_margin</item>
        <item name="android:textColor">@color/public_gray_deep</item>
        <item name="android:textSize">@dimen/netease_font_normal</item>
    </style>
</resources>
