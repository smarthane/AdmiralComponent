<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.smarthane.admiralcomponent.netease">

    <application>
        <activity
            android:name=".mvp.ui.activity.NeteaseHomeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/public_name_netease"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".mvp.ui.activity.NewsDetailActivity"
            android:configChanges="orientation|screenSize"
            android:label=""
            android:screenOrientation="portrait"/>

        <activity
            android:name=".mvp.ui.activity.NewsChannelActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/netease_channel_manage"
            android:screenOrientation="portrait"/>

        <!-- 在组件集成宿主时, 由于宿主已经声明了 lib_common_sdk 的公有 ConfigModule, 所以在这里只需要声明业务组件自己的 ConfigModule -->
        <meta-data
            android:name="com.smarthane.admiralcomponent.netease.app.GlobalConfiguration"
            android:value="ConfigModule"/>
    </application>
</manifest>