<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/public_include_title" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@color/public_colorPrimaryDark"
        app:lottie_autoPlay="true"
        app:lottie_fileName="8216-working-room.json"
        app:lottie_loop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_zhihu"
            tools:text="@string/public_name_zhihu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/public_background"
            android:textColor="@color/public_color_959292"
            android:textSize="@dimen/public_font_24sp" />

        <Button
            android:id="@+id/bt_gank"
            tools:text="@string/public_name_gank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/public_background"
            android:textColor="@color/public_color_959292"
            android:textSize="@dimen/public_font_24sp" />

        <Button
            android:id="@+id/bt_netease"
            tools:text="@string/public_name_netease"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/public_background"
            android:textColor="@color/public_color_959292"
            android:textSize="@dimen/public_font_24sp" />

        <Button
            android:id="@+id/bt_gold"
            tools:text="@string/public_name_gold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/public_background"
            android:textColor="@color/public_color_959292"
            android:textSize="@dimen/public_font_24sp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
